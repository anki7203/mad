<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#795548">

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="490sp"
        android:id="@+id/webView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:layout_width="130sp"
        android:layout_height="50sp"
        android:id="@+id/favBtn"
        android:layout_gravity="bottom"
        android:layout_weight="0.25"
        android:contextClickable="false"
        android:longClickable="true"
        android:src="@drawable/fav"
        android:scaleType="fitCenter"
        android:background="#795548"
        android:clickable="true"
        android:layout_alignBottom="@+id/webView"
        android:layout_alignLeft="@+id/webView"
        android:layout_alignStart="@+id/webView"
        android:nestedScrollingEnabled="false"
        android:onClick="favClick" />

    <ImageButton
        android:layout_width="130sp"
        android:layout_height="50sp"
        android:id="@+id/reactBtn"
        android:layout_gravity="bottom"
        android:layout_weight="0.25"
        android:contextClickable="true"
        android:background="#795548"
        android:layout_alignTop="@+id/favBtn"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/react"
        android:clickable="true"
        android:onClick="reactClick" />

    <ImageButton
        android:layout_width="130sp"
        android:layout_height="50sp"
        android:id="@+id/reactionsBtn"
        android:layout_gravity="bottom"
        android:layout_weight="0.25"
        android:contextClickable="true"
        android:background="#795548"
        android:layout_alignTop="@+id/reactBtn"
        android:layout_toRightOf="@+id/reactBtn"
        android:layout_toEndOf="@+id/reactBtn"
        android:scaleType="fitCenter"
        android:src="@drawable/reactions"
        android:clickable="true"
        android:onClick="reactionClick" />

</RelativeLayout>
